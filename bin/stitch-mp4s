#!/bin/bash

rm -f /tmp/list.txt

ls /tmp/
ls /tmp/mp4s/

for f in $1; do
  echo "file '../..$f'"
  echo "file '../..$f'" >> /tmp/list.txt
done

ffmpeg -y \
  -f concat \
  -i /tmp/list.txt \
  -i $2 \
  -map 0:v \
  -map 1:a \
  -c copy \
  -strict experimental \
  -codec:a aac \
  -b:a 192k \
  -shortest $3

